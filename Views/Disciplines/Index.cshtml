@model Texnicum.ViewModels.Disciplines.IndexDisciplineViewModel

@{
    ViewData["Title"] = "Дисциплины";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item active">Дисциплины</li>
    </ol>
</nav>

<h2>Дисциплины</h2>

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<div class="d-flex justify-content-between">
    <div class="p-2">
        <ul class="nav">
            <li>
                <a class="btn text-dark" asp-action="DownloadPattern" title="Скачать шаблон">
                    <i class="fas fa-file-download"></i>
                </a>
            </li>
            <li>
                <a class="btn text-dark" asp-action="Create">
                    <i class="far fa-plus-square"></i>  Добавить дисциплину
                </a>
            </li>
        </ul>
    </div>
    <div class="p-2">
        <form class="form-inline" asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    <input type="text" name="IndexProfModule" placeholder="Индекс пф модуля" value="@Model.FilterDisciplineViewModel.SelectedIndexProfModule" class="form-control" />
                    <input type="text" name="ProfModule" placeholder="Название" value="@Model.FilterDisciplineViewModel.SelectedProfModule" class="form-control" />
                    <input type="text" name="Index" placeholder="Индекс" value="@Model.FilterDisciplineViewModel.SelectedIndex" class="form-control" />
                    <input type="text" name="Name" placeholder="Имя" value="@Model.FilterDisciplineViewModel.SelectedName" class="form-control" />
                    <input type="text" name="ShortName" placeholder="Краткое имя" value="@Model.FilterDisciplineViewModel.SelectedShortName" class="form-control" />

                    <input type="submit" value="Поиск" class="btn btn-outline-success" /> |
                    <a class="=btn text-dark" asp-action="Index"><i class="fas fa-eraser"></i></a>
                </p>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered text-nowrap table-sm">
        <thead class="thead-light">
            <tr>
                <th>
                    <a asp-action="IndexProfModule"
                       asp-route-sortOrder="@(Model.SortDisciplineViewModel.IndexProfModuleSort)"
                       asp-route-IndexProfModule="@(Model.FilterDisciplineViewModel.SelectedIndexProfModule)"
                   asp-route-ProfModule="@(Model.FilterDisciplineViewModel.SelectedProfModule)"
                   asp-route-Index="@(Model.FilterDisciplineViewModel.SelectedIndex)"
                   asp-route-Name="@(Model.FilterDisciplineViewModel.SelectedName)"
                   asp-route-ShortName="@(Model.FilterDisciplineViewModel.SelectedShortName)">Индекс проф модуля</a>
                </th>
                <th>
                    <a asp-action="ProfModule"
                       asp-route-sortOrder="@(Model.SortDisciplineViewModel.ProfModuleSort)"
                       asp-route-IndexProfModule="@(Model.FilterDisciplineViewModel.SelectedIndexProfModule)"
                   asp-route-ProfModule="@(Model.FilterDisciplineViewModel.SelectedProfModule)"
                   asp-route-Index="@(Model.FilterDisciplineViewModel.SelectedIndex)"
                   asp-route-Name="@(Model.FilterDisciplineViewModel.SelectedName)"
                   asp-route-ShortName="@(Model.FilterDisciplineViewModel.SelectedShortName)">Название</a>
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@(Model.SortDisciplineViewModel.IndexSort)"
                       asp-route-IndexProfModule="@(Model.FilterDisciplineViewModel.SelectedIndexProfModule)"
                   asp-route-ProfModule="@(Model.FilterDisciplineViewModel.SelectedProfModule)"
                   asp-route-Index="@(Model.FilterDisciplineViewModel.SelectedIndex)"
                   asp-route-Name="@(Model.FilterDisciplineViewModel.SelectedName)"
                   asp-route-ShortName="@(Model.FilterDisciplineViewModel.SelectedShortName)">Индекс</a>
                </th>
                <th>
                    <a asp-action="Name"
                       asp-route-sortOrder="@(Model.SortDisciplineViewModel.NameSort)"
                       asp-route-IndexProfModule="@(Model.FilterDisciplineViewModel.SelectedIndexProfModule)"
                   asp-route-ProfModule="@(Model.FilterDisciplineViewModel.SelectedProfModule)"
                   asp-route-Index="@(Model.FilterDisciplineViewModel.SelectedIndex)"
                   asp-route-Name="@(Model.FilterDisciplineViewModel.SelectedName)"
                   asp-route-ShortName="@(Model.FilterDisciplineViewModel.SelectedShortName)">Имя</a>
                </th>
                <th>
                    <a asp-action="ShortName"
                       asp-route-sortOrder="@(Model.SortDisciplineViewModel.ShortNameSort)"
                       asp-route-IndexProfModule="@(Model.FilterDisciplineViewModel.SelectedIndexProfModule)"
                   asp-route-ProfModule="@(Model.FilterDisciplineViewModel.SelectedProfModule)"
                   asp-route-Index="@(Model.FilterDisciplineViewModel.SelectedIndex)"
                   asp-route-Name="@(Model.FilterDisciplineViewModel.SelectedName)"
                   asp-route-ShortName="@(Model.FilterDisciplineViewModel.SelectedShortName)">Краткое имя</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Disciplines)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IndexProfModule)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProfModule)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Index)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortName)
                    </td>
                    <td>           
                        <a class="btn text-dark forId" asp-action="Details" asp-route-id="@item.Id" title="Посмотреть подробнее" id="details">
                            <i class="far fa-eye"></i>
                        </a> |
                        <a class="btn text-dark" asp-action="Edit" asp-route-id="@item.Id" title="Редактировать">
                            <i class="fas fa-pencil-alt"></i>
                        </a> |
                        <a class="btn text-dark" asp-action="Delete" asp-route-id="@item.Id" title="Удалить">
                            <i class="far fa-minus-square"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav>
<ul class="pagination justify-content-center">
    @if (Model.PageViewModel.HasPreviousPage || Model.PageViewModel.HasNextPage)
    {
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" title="Назад"
                   asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
                   asp-route-sortOrder="@(Model.SortDisciplineViewModel.Current)"
                   asp-route-IndexProfModule="@(Model.FilterDisciplineViewModel.SelectedIndexProfModule)"
                   asp-route-ProfModule="@(Model.FilterDisciplineViewModel.SelectedProfModule)"
                   asp-route-Index="@(Model.FilterDisciplineViewModel.SelectedIndex)"
                   asp-route-Name="@(Model.FilterDisciplineViewModel.SelectedName)"
                   asp-route-ShortName="@(Model.FilterDisciplineViewModel.SelectedShortName)">

                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
        }
        @if (Model.PageViewModel.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" title="Вперед"
                   asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
                   asp-route-sortOrder="@(Model.SortDisciplineViewModel.Current)"
                   asp-route-IndexProfModule="@(Model.FilterDisciplineViewModel.SelectedIndexProfModule)"
                   asp-route-ProfModule="@(Model.FilterDisciplineViewModel.SelectedProfModule)"
                   asp-route-Index="@(Model.FilterDisciplineViewModel.SelectedIndex)"
                   asp-route-Name="@(Model.FilterDisciplineViewModel.SelectedName)"
                   asp-route-ShortName="@(Model.FilterDisciplineViewModel.SelectedShortName)">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        }

    }
</ul>
</nav>

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $.ajaxSetup({ cache: false });
            $(".forId").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}
